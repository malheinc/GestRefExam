
{% for typeMessage in ['success', 'info', 'warning', 'danger']%}
    {% if app.session.getFlashBag.peek(typeMessage) %}
    <div class="alert alert-{{ typeMessage }} alert-dismissable">
        {#<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>#}
        <ul>
            {% for message in app.session.getFlashBag.get(typeMessage) %}
            <li>{{ message }}</li>
            {% endfor %}
        </ul>
    </div>
    {% endif %}
{% endfor %}